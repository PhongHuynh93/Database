<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="dhbk.android.database.fragment.DetailPostFragment">

    <ImageView
        android:id="@+id/image_detail_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/six"/>

    <TextView
        android:id="@+id/tv_title_detail_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:background="#66FFFFFF">

        <TextView
            android:id="@+id/tv_body_detail_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="fddddddddddddddddddddddddddd"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </RelativeLayout>
</FrameLayout>
